<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/networkStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Status"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/networkTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Type"
        android:textSize="16sp"
        android:layout_below="@id/networkStatusTextView"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/networkTypeTextView"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/connectedTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Connected Time: "
        android:textSize="16sp"
        android:layout_below="@id/calendarView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/connectedTimeTextView"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/logsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logs"
            android:textSize="16sp"
            android:padding="16dp"/>
    </ScrollView>

</RelativeLayout>
